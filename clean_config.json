{
  "project_cleanup": {
    "description": "Конфигурация для очистки проекта перед архивированием",
    "version": "1.0.0",
    "files_to_remove": [
      "*.pyc",
      "*.pyo",
      "*.pyd",
      "*.tmp",
      "*.temp",
      "*.swp",
      "*.swo",
      "*~",
      "*.log",
      "*.bak",
      "*.backup",
      "*_backup",
      "*.zip",
      "*.tar.gz",
      "*.rar",
      ".coverage",
      ".DS_Store",
      "Thumbs.db",
      "Desktop.ini",
      ".env.local",
      ".env.development",
      ".env.test"
    ],
    "directories_to_remove": [
      "__pycache__",
      ".pytest_cache",
      ".tox",
      ".nox",
      "htmlcov",
      ".vscode",
      ".idea",
      "node_modules",
      "instance",
      ".webassets-cache",
      "docs/_build",
      "site",
      ".ipynb_checkpoints",
      ".mypy_cache",
      ".pytype",
      "cython_debug",
      "logs",
      ".venv",
      "venv",
      "env",
      "ENV"
    ],
    "archive_exclusions": [
      ".git",
      ".venv",
      "venv",
      "node_modules",
      "__pycache__",
      "*.pyc",
      ".pytest_cache",
      ".coverage",
      "htmlcov",
      ".tox",
      ".vscode",
      ".idea",
      ".DS_Store",
      "*.log",
      "instance",
      "*.db",
      "*.sqlite",
      "*.sqlite3",
      "*.tmp",
      "*.temp"
    ],
    "preserve_files": [
      "requirements.txt",
      "README.md",
      "Dockerfile",
      "docker-compose.yml",
      ".gitignore",
      ".flake8",
      "Makefile",
      "run.py",
      "app.py"
    ]
  },
  "archive_settings": {
    "format": "tar.gz",
    "naming_pattern": "{project_name}_{date}_{time}",
    "date_format": "%Y%m%d",
    "time_format": "%H%M%S",
    "compression_level": 9
  },
  "linting": {
    "tools": ["flake8", "black", "isort", "autopep8"],
    "flake8_config": ".flake8",
    "black_line_length": 88,
    "isort_profile": "black"
  }
}